@{
    ViewData["Title"] = "Cadastro";
}

<body class="c-body">
    <div class="c-estrutura">
        
        <img src="img/Instadev.png " alt="Logo Instadev">
            <p>Cadastre-se para ver fotos e <br> vídeos dos seus amigos.</p>

            <div>
                <!--Formulário início-->
                <form >
               
                    <input  type="text" name="Email" placeholder="E-mail" class="c-inputs" id="c-input1" required />
                   
                    <!--Data nasciemento início-->
                    <div class="c-datas"> 
                        <P>Data de nascimento</P>
                    
                    <select name = "Dia" id="dia" required >
                        
                        <option value="">Dia</option>
                             
                    </select>
                   
                    <select name="Mes" required >
                        
                        <option>Mês </option>
                        <option value="01">Janeiro  </option>
                        <option value="02">Fevereiro</option>
                        <option value="03">Março    </option>
                        <option value="04">Abril    </option>
                        <option value="05">Maio     </option>
                        <option value="06">Junho    </option>
                        <option value="07">Julho    </option>
                        <option value="08">Agosto   </option>
                        <option value="09">Setembro </option>
                        <option value="10">Outubro  </option>
                        <option value="11">Novembro </option>
                        <option value="12">Dezembro </option>
      
                    </select>	
                    
                    <select name = "Ano" id="ano" required >
                        <option value="">Ano</option>
                    </select>

                    </div>
                    <!--Data nasciemento Fim-->
                    
                    <input  type="text" name="Nome" placeholder="Nome completo" class="c-inputs" required />
                    <input  type="text" name="Username" placeholder="Username" class="c-inputs" required />
                    <input  type="password" name="Senha" placeholder="Senha" class="c-inputs" required />
                    <a><button class="c-botao">Cadastrar</button></a>

                </form>

                <p id="c-pf">Ao se cadastrar, você concorda com nossos <br> Termos, Política de Dados e Política de Cookies. </p>


                <!--Formulário Fim-->
          
    </div>
    
    <div class="c-estrutura2">
        <p>Tem uma conta?  </p>  
        <a href="https://localhost:5001/">&nbsp Conecte-se</a>
    </div>

    <footer class="c-foo">
    <p>Obtenha o aplicativo.</p>
    <a href="https://apps.apple.com/app/instagram/id389801252?vt=lo"><img id="c-loja" src="img/app_store 1.png " alt="Baixe o nosso aplicativo na Apple Store"></a>
    <a href="https://play.google.com/store/apps/details?id=com.instagram.android&referrer=utm_source%3Dinstagramweb%26utm_campaign%3DloginPage%26ig_mid%3DFD9BFD41-AB1E-4F24-A012-7A3A752CCC21%26utm_content%3Dlo%26utm_medium%3Dbadge"><img id="c-loja1" src="img/google_play 1.png " alt="Baixe o nosso aplicativo na Google Play"></a>

    </footer>
    

</body>

<script>
var ano = document.getElementById('ano');
var dia= document.getElementById('dia');


    for(var i = 1919; i <= 2021; i++){
        ano.innerHTML+='<option value="'+i+'">'+i+'</option>'; }
            
    for(var i = 1; i <= 31; i++){
        dia.innerHTML+='<option value="'+i+'">'+i+'</option>'; }
            

</script>



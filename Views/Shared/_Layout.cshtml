<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InstaDev</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="topo">
        <div class="posicaoLogo">
            <a href="~/Views/Home/index.cshtml"><img src="~/img/Instadev.svg" alt="Logo da pagina"></a>
        </div>
        <div class="pesquisa">
            <input type="text" id="txtPesquisa" placeholder="Pesquisar">
        </div>
        <div class="links">
            <a href="~/Views/Home/index.cshtml"><img src="~/img/Vector.png" alt="Link para o feed" class="imgLink"></a>
            <a href="#"><img src="~/img/plane 1.png" alt="" class="imgLink"></a>
            <a href="#"><img src="~/img/compass 1.png" alt="" class="imgLink"></a>
            <a href="#"><img src="~/img/Vector(1).png" alt="" class="imgLink"></a>
            <a href="~/Views/Perfil/index.cshtml"><img src="~/img/thank-you 1.png" alt="Link para o perfil" class="imgLink"></a>
        </div>
    </header>

      
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> 

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
